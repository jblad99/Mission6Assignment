@{
    ViewData["Title"] = "Delete Movie";
}

@model MoviesResponse

<!-- Confirmation page for deleting a record. Clicking Cancel will not delete the record. -->

<h2>Confirm Deletion</h2>
<h3>Are you sure you want to delete the record for @Model.Title?</h3>

<form method="post" asp-action="Delete">
    <button type="submit">Delete</button>
    <a asp-controller="Home" asp-action="MoviesList" class="btn btn-primary">Cancel</a>

    <input type="hidden" asp-for="MovieId" />
</form>